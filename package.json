{
  "name": "ergotest",
  "author": "James Shore <jshore@jamesshore.com> (https://www.jamesshore.com)",
  "version": "0.1.1",
  "description": "A test runner with all the features you want, none of the complexity you don't, and no dependencies.",
  "type": "module",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "READMAP.md",
    "LICENSE.TXT",
    "dist",
    "docs"
  ],
  "exports": {
    ".": "./dist/tests/index.js",
    "./*.js": "./dist/tests/*.js",
    "./*.d.ts": "./dist/tests/*.d.ts"
  },
  "engines": {
    "node": "20.17.0"
  },
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "test",
    "tdd"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesshore/ergotest/issues"
  },
  "homepage": "https://github.com/jamesshore/ergotest",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesshore/ergotest.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@sinonjs/fake-timers": "^13.0.2",
    "@swc/core": "^1.7.26",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.4",
    "@types/sinonjs__fake-timers": "^8.1.5",
    "chai": "^5.1.1",
    "ergotest": "file:",
    "eslint": "^9.11.1",
    "globals": "^15.9.0",
    "minimatch": "^10.0.1",
    "minimist": "^1.2.8",
    "typescript": "5.5",
    "typescript-eslint": "^8.7.0"
  }
}
